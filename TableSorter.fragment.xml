<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
	<ResponsivePopover title="Сортировать:" placement="Bottom" afterOpen="onOpen">
		<content>
			<List>
				<items>
					<CustomListItem type="Active" press="onAscending">
						<HBox alignItems="Center" justifyContent="Center" class="HBoxStyle">
							<Label text="По возрастанию"/>
						</HBox>
					</CustomListItem>
					<CustomListItem type="Active" press="onDescending">
						<HBox alignItems="Center" justifyContent="Center" class="HBoxStyle">
							<Label text="По убыванию"/>
						</HBox>
					</CustomListItem>
					<CustomListItem>
						<HBox alignItems="Center" justifyContent="Center" class="HBoxStyle">
							<Label text="Искать:"/>
							<Input width="90%" change="onChange"/>
						</HBox>
					</CustomListItem>
				</items>
			</List>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>